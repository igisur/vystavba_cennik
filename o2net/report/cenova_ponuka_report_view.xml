<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_cenova_ponuka_report">
            <field name="name">o2net_view_cenova_ponuka_report</field>
            <field name="model">o2net.cenova_ponuka_report</field>
            <field name="arch" type="xml">
                <pivot string="Purchase Orders Statistics" disable_linking="True">
                    <field name="typ" type="col"/>
                    <field name="oddiel" type="col"/>
                    <field name="polozka" type="col"/>
                    <field name="cena_jednotkova" type="col"/>
                    <field name="mj" type="col"/>
                    <field name="pocet" type="col"/>
                    <field name="cena_celkom" type="col"/>
                </pivot>
            </field>
        </record>

    <record id="action_cenova_ponuka_report_all" model="ir.actions.act_window">
        <field name="name">Purchase Analysis</field>
        <field name="res_model">o2net.cenova_ponuka_report</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{'search_default_orders': 1}</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="help">Nejaky text</field>
    </record>

    <menuitem id="menu_cenova_ponuka_report_form_creation" name="Cenova ponuka report form" parent="menu_cenova_ponuka_root" action="action_cenova_ponuka_report_all"/>

    </data>
</openerp>

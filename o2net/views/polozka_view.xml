<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_form_polozka">
            <field name="name">Items</field>
            <field name="model">o2net.polozka</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label string="Item"/>
                                <field name="id" invisible="1"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="oddiel_id"/>
                            <field name="kod"/>
                            <field name="intern_kod"/>
                            <field name="intern_id"/>
                            <field name="mj"/>
                        </group>
                        <group>
                            <field name="is_balicek" string="Package"/>
                        </group>
                        <label for="description"/>
                        <field name="description"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click to create a new item.</p>
                <p>Here is the list of price list's items.</p>
            </field>
        </record>

       <record model="ir.ui.view" id="view_tree_polozka">
            <field name="name">Items</field>
            <field name="model">o2net.polozka</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
            <tree string="Item">
                <field name="id"/>
                <field name="intern_id"/>
                <field name="kod"/>
                <field name="name"/>
                <field name="description"/>
                <field name="mj" string="MJ"/>
                <field name="intern_kod"/>
            </tree>
            </field>
       </record>

       <record model="ir.actions.act_window" id="action_window_balicek">
           <field name="name">Packages</field>
           <field name="res_model">o2net.polozka</field>
           <field name="view_id" ref="view_tree_polozka"/>
           <field name="view_type">form</field>
           <field name="view_mode">tree,form</field>
           <field name="domain"> [('is_balicek','=','True')]</field>
           <field name="help" type="html">
               <p class="oe_view_nocontent_create">Click to create a new package.</p>
               <p>Here is the list of price lists's packages.</p>
           </field>
        </record>

       <record model="ir.actions.act_window" id="action_window_polozka">
           <field name="name">Items</field>
           <field name="res_model">o2net.polozka</field>
           <field name="view_id" ref="view_tree_polozka"/>
           <field name="view_type">form</field>
           <field name="view_mode">tree,form</field>
           <field name="domain"> [('is_balicek','!=','True')]</field>
       </record>

        <menuitem id="menu_balicek"
                  name="Packages"
                  sequence="40"
                  parent="menu_cennik_root"
                  action="action_window_balicek"/>

        <menuitem id="menu_polozka"
                  name="Items"
                  sequence="41"
                  parent="menu_cennik_root"
                  action="action_window_polozka"/>

    </data>
</openerp>

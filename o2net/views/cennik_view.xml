<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_form_cennik_dodavatel">
            <field name="name">cennik dodavatela</field>
            <field name="model">o2net.cennik</field>
            <field name="priority" eval="5"/>
            <field name="type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Klikni pre založenie nového dodávateľského cenníka.</p>
                <p>Tu nájdete zoznam dodávateľských cenníkov.</p>
            </field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label string="Price list"/>
                                <field name="id" invisible="1"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="dodavatel_id"/> <!-- musi byt firma - dodavatel -->
                            <field name="platny_od"/>
                            <field name="platny_do"/>
                            <field name="currency_id"/>
                        </group>

                        <notebook>
                            <page string="Items">
                                <field name="cennik_polozka_ids">
                                    <tree string="Price list items" editable="bottom">
                                        <field name="polozka_id" />
                                        <field name="cena" />
                                        <field name="mj"/>
                                        <field name="is_balicek" readonly="True"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <!-- class="oe_inline" -->
                        <label for="description"/>
                        <field name="description" />
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="view_form_cennik_polozka">
            <field name="name">cennik polozka</field>
            <field name="model">o2net.cennik.polozka</field>
            <field name="priority" eval="5"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title">
                        <h1>
                            <field name="name" nolabel="1" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="kod" readonly="1"/>
                        <field name="mj" readonly="1" string="MJ"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="cena" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                    </group>

                    <div class="oe_clear"/>

                    <label for="popis"/>
                    <field name="popis" readonly="1"/>
                </form>
            </field>
        </record>

       <record model="ir.ui.view" id="view_tree_cennik_polozky">
           <field name="name">Cenník s polozkami</field>
           <field name="model">o2net.cennik.polozka</field>
           <field name="type">tree</field>
           <field name="arch" type="xml">
               <tree>
                   <field name="name"/>
                   <field name="kod"/>
                   <field name="mj"/>
                   <field name="popis"/>
                   <field name="cena"/>
               </tree>
            </field>
       </record>

       <record model="ir.ui.view" id="view_tree_cennik_dodavatel">
            <field name="name">Cennik dodávateľa</field>
            <field name="model">o2net.cennik</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="platny_od"/>
                <field name="platny_do"/>
                <field name="dodavatel_id"/>
            </tree>
            </field>
       </record>

       <record model="ir.actions.act_window" id="action_window_cennik_dodavatel">
           <field name="name">Cennik dodávateľa</field>
           <field name="res_model">o2net.cennik</field>
           <field name="view_id" ref="view_tree_cennik_dodavatel"/>
           <field name="view_type">form</field>
           <field name="view_mode">tree,form</field>
       </record>

       <record model="ir.actions.act_window" id="action_window_cennik_cennik">
           <field name="name">Cennik dodávateľa</field>
           <field name="res_model">o2net.cennik.polozka</field>
           <field name="view_id" ref="view_tree_cennik_polozky"/>
           <field name="view_type">form</field>
           <field name="view_mode">tree</field>
       </record>

       <menuitem id="menu_cennik_root"
                name="Price list"
                sequence="30"
                parent="menu_root"
                groups="o2net.group_vystavba_pc,o2net.group_vystavba_pm,o2net.group_vystavba_admin"/>

       <menuitem id="menu_cennik"
                 name="Vendor"
                 parent="menu_cennik_root"
                 sequence="31"
                 action="action_window_cennik_dodavatel"/>

       <menuitem id="menu_cennik_cennik"
                 name="Price list"
                 parent="menu_cennik_root"
                 sequence="32"
                 action="action_window_cennik_cennik"
                 groups="o2net.group_vystavba_admin"/>
    </data>
</openerp>

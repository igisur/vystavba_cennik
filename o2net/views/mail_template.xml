<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="mail_cp_assigned" model="mail.template">
            <field name="name">Price offer - mail_cp_assigned</field>
            <field name="email_from">odoo.mailer-daemon@o2network.sk</field>
            <field name="email_to"></field>
            <field name="partner_to"></field>
            <field name="lang"></field>
            <field name="subject">Price offer ${object.name}/${object.shortname}/${object.financial_code} (${object.vendor_id.display_name})</field>
            <field name="model_id" ref="model_o2net_cenova_ponuka"/>
            <field name="report_template" ref="report_cenova_ponuka"/>
            <field name="report_name">PO_${object.name}/${object.shortname}/${object.financial_code}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
            <![CDATA[
            <p>
            Hello,<br/><br/>

            You've been assigned to price offer <a href="${object.base_url}">${object.name}/${object.shortname}/${object.financial_code} (${object.vendor_id.display_name})</a><br/>
            </p>
            best regards,<br/>
               O2 network team
            ]]>
            </field>
        </record>



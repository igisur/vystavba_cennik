<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="o2net.site">
            <field name="name">o2net.site form view</field>
            <field name="model">o2net.site</field>
            <field name="arch" type="xml">

                <form string="site" version="7.0">
                    <sheet>
                        <h1>
                            <field name="name" placeholder="Site" required="True"/>
                        </h1>

                        <group>
                            <group>
                                <field name="site_id" readonly="True"/>
                                <field name="customer" required="True"/>
                                <field name="street" attrs="{'required':[('site_type','not in','headquarters')]}"/>
                                <field name="city" attrs="{'required':[('site_type','not in','headquarters')]}"/>
                                <field name="country" attrs="{'required':[('site_type','not in','headquarters')]}"/>
                                <field name="contract_term_end_date"/>
                            </group>
                            <group>
                                <field name="site_type" required="True"/>
                                <field name="cost_center"/>
                                <field name="register_no"/>
                                <field name="street_no"/>
                                <field name="zipcode" attrs="{'required':[('site_type','not in','headquarters')]}"/>
                                <field name="lat"/>
                                <field name="lon"/>
                                <field name="altitude"/>
                                <field name="antena_height"/>
                            </group>
                        </group>

                        <group>
                            <group>
                                <field name="site_administration_person"/>
                                <field name="site_administration_phone"/>
                                <field name="site_administration_email"/>
                            </group>
                            <group>
                                <field name="site_operations_person"/>
                                <field name="site_operations_phone"/>
                                <field name="site_operations_email"/>
                            </group>

                        </group>

                        <notebook>
                            <page string="Internal comment">
                                <field name="comment"/>
                            </page>
                            <page string="Service Components">
                                <!--<field name="scomponents"/>-->
                            </page>
                            <page string="Circuits site A">
                                <!--<field name="circuit_a"/>-->

                            </page>
                            <page string="Circuit site B">
                                <!--<field name="circuit_b"/>-->

                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>

            </field>
        </record>

        <record model="ir.ui.view" id="view_net_site_tree" >
            <field name="name">o2net.site.tree</field>
            <field name="model">o2net.site</field>
            <field name="type">tree</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree toolbar="1">
                    <field name="name"/>
                    <field name="site_id"/>
                    <field name="customer"/>
                    <field name="street"/>
                    <field name="city"/>
                    <field name="country"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_partner_net_sites">
            <field name="name">partner.sites.tree</field>
            <field name="domain">[('customer.id', '=', d_cust_id)]</field>
            <field name="context">{}</field>
            <field name="res_model">o2net.site</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="usage"></field>
            <field name="target"></field>
        </record>

        <record model="ir.actions.act_window" id="net_site_view_customer_tree">
            <field name="name">Sites</field>
            <field name="res_model">o2net.site</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('customer', '=', active_id)]</field>
            <field name="arch" type="xml">
                <tree string="Sites">
                    <field name="customer"/>
                    <field name="name"/>
                    <field name="site_id"/>
                    <field name="street"/>
                    <field name="city"/>
                    <field name="country"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_net_site">
            <field name="name">Site</field>
            <field name="res_model">o2net.site</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem name="Site" id="menu_net_site"
                  sequence="30"
                  parent="menu_root"
                  action="action_net_site"/>

    </data>
</openerp>
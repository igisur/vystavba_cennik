<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record model="ir.ui.view" id="o2net.ntr_form">
            <field name="name">o2net.ntr form view</field>
            <field name="model">o2net.tech.proposal</field>
            <field name="arch" type="xml">

                <form string="ntr">
                    <sheet>
                        <h1>
                            <field name="order_number" placeholder="abc" required="True"/>
                        </h1>

                        <group>
                            <group>
                                <field name="site_id"/>
                                <field name="nr_traffic_ranking"/>
                                <field name="status"/>
                                <field name="fk"/>
                                <field name="psid_2g4g"/>
                                <field name="name"/>
                                <field name="address"/>
                                <field name="location_type"/>
                                <field name="job_type"/>
                                <field name="location_a_pole"/>
                                <field name="technology"/>
                            </group>
                            <group>
                                <field name="akv_inz_company_id"/>
                                <field name="install_company_id"/>
                                <field name="akv"/>
                                <field name="ran_planner"/>
                                <field name="mw_planner"/>
                                <field name="trans_spec"/>
                            </group>
                            <group>
                                <field name="job_sent_vendor_date"/>
                                <field name="pre_acq_report_sent_date"/>
                                <field name="site_survey_date"/>
                                <field name="ntr_sent_date"/>
                                <field name="ntr_approved_date"/>
                                <field name="acq_report_sent_date"/>
                                <field name="nz_close_date"/>
                                <field name="annual_rent"/>
                                <field name="doss_addressed_date"/>
                            </group>
                            <group>
                                <field name="su_application_sent_date"/>
                                <field name="su_permission_issued_date"/>
                            </group>
                            <group>
                                <field name="order_vendor_date"/>
                                <field name="order_akv_date"/>
                                <field name="order_inz_date"/>
                                <field name="order_install_date"/>
                            </group>
                            <group>
                                <field name="bbu_eltek"/>
                                <field name="specification_date"/>
                                <field name="date_3g"/>
                                <field name="date_2g4g"/>
                                <field name="hw_in_stock"/>
                                <field name="install_finish_date"/>
                                <field name="mw_install_date"/>
                                <field name="estimated_integration_date"/>
                                <field name="integration_date"/>
                                <field name="onair_date"/>
                                <field name="flm_ran_acceptance_date"/>
                                <field name="acceptance_issues_fixed_date"/>
                                <field name="stock_date"/>
                                <field name="acceptance_date"/>
                                <field name="full_reception"/>
                                <field name="rfs_setup_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Documents">
                            </page>
                        </notebook>

                        <div class="oe_clear"/>

                        <label for="note"/>
                        <field name="note"/>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_net_site_tree" >
            <field name="name">o2net.ntr.tree</field>
            <field name="model">o2net.tech.proposal</field>
            <field name="type">tree</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree toolbar="1">
                    <field name="order_number"/>
                    <field name="site_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_net_ntr">
            <field name="name">Ntr</field>
            <field name="res_model">o2net.tech.proposal</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem name="Ntr" id="menu_ntr"
                  sequence="40"
                  parent="menu_root"
                  action="action_net_ntr"/>

    </data>
</openerp>
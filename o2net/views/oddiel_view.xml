<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_tree_oddiel">
            <field name="name">Package</field>
            <field name="model">o2net.oddiel</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_form_oddiel">
            <field name="name">Package</field>
            <field name="model">o2net.oddiel</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="name" string="Kód"/>
                        <field name="name"/>
                        <label for="description" string="Popis"/>
                        <field name="description"/>
                        <label for="atypsluzba" string="KSZ (pre atyp)"/>
                        <field name="atypsluzba"/>
                    </sheet>
                </form>
            </field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Klikni pre založenie novej položky.</p>
                <p>Tu nájdete zoznam položiek.</p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_window_oddiel">
            <field name="name">Package</field>
            <field name="res_model">o2net.oddiel</field>
            <field name="view_id" ref="view_tree_oddiel"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Klikni pre založenie nového oddielu.</p>
                <p>Tu nájdete zoznam oddielov.</p>
            </field>
        </record>

        <!-- Menu item to open To-do Task list -->
        <menuitem id="menu_oddiel"
            name="Package"
            parent="menu_cennik_root"
            sequence="50"
            action="action_window_oddiel"/>
        </data>
</openerp>
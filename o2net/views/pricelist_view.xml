<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_form_cennik_dodavatel">
            <field name="name">cennik dodavatela</field>
            <field name="model">o2net.cennik</field>
            <field name="priority" eval="5"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label string="Price list"/>
                                <field name="id" invisible="1"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="vendor_id"/> <!-- musi byt firma - dodavatel -->
                            <field name="valid_from"/>
                            <field name="valid_to"/>
                            <field name="currency_id"/>
                        </group>

                        <notebook>
                            <page string="Items">
                                <field name="pricelist_item_ids">
                                    <tree string="Price list items" editable="bottom">
                                        <field name="item_id" />
                                        <field name="price" />
                                        <field name="measure_unit"/>
                                        <field name="is_package" readonly="True"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <label for="description"/>
                        <field name="description" />
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="view_form_cennik_polozka">
            <field name="name">cennik polozka</field>
            <field name="model">o2net.cennik.polozka</field>
            <field name="priority" eval="5"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title">
                        <h1>
                            <field name="name" nolabel="1" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="code" readonly="1"/>
                        <field name="measure_unit" readonly="1" string="Measure unit"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                    </group>

                    <div class="oe_clear"/>

                    <label for="description"/>
                    <field name="description" readonly="1"/>
                </form>
            </field>
        </record>

       <record model="ir.ui.view" id="view_tree_cennik_polozky">
           <field name="name">Cenn√≠k s polozkami</field>
           <field name="model">o2net.cennik.polozka</field>
           <field name="type">tree</field>
           <field name="arch" type="xml">
               <tree>
                   <field name="name"/>
                   <field name="code"/>
                   <field name="measure_unit"/>
                   <field name="description"/>
                   <field name="price"/>
               </tree>
            </field>
       </record>

       <record model="ir.ui.view" id="view_tree_cennik_dodavatel">
            <field name="name">Vendor's price list</field>
            <field name="model">o2net.cennik</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="valid_from"/>
                <field name="valid_to"/>
                <field name="vendor_id"/>
            </tree>
            </field>
       </record>

       <record model="ir.actions.act_window" id="action_window_pricelist_vendor">
           <field name="name">Vendor's price list</field>
           <field name="res_model">o2net.cennik</field>
           <field name="view_id" ref="view_tree_cennik_dodavatel"/>
           <field name="view_type">form</field>
           <field name="view_mode">tree,form</field>
       </record>

       <record model="ir.actions.act_window" id="action_window_pricelist_pricelist">
           <field name="name">Vendor's price list</field>
           <field name="res_model">o2net.cennik.polozka</field>
           <field name="view_id" ref="view_tree_cennik_polozky"/>
           <field name="view_type">form</field>
           <field name="view_mode">tree</field>
       </record>

       <menuitem id="menu_pricelist_root"
                name="Price list"
                sequence="30"
                parent="menu_root"
                groups="o2net.group_vystavba_pc,o2net.group_vystavba_pm,o2net.group_vystavba_admin"/>

       <menuitem id="menu_pricelist_vendor"
                 name="Vendor"
                 parent="menu_pricelist_root"
                 sequence="31"
                 action="action_window_pricelist_vendor"/>

       <menuitem id="menu_pricelist_pricelist"
                 name="Price list"
                 parent="menu_pricelist_root"
                 sequence="32"
                 action="action_window_pricelist_pricelist"
                 groups="o2net.group_vystavba_admin"/>
    </data>
</openerp>

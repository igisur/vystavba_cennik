                    <div class="row mt32 mb32">
                        <div t-if="d.skratka" class="col-xs-3">
                            <strong>Skratka:</strong>
                            <p t-field="d.skratka"/>
                        </div>
                        <div t-if="d.financny_kod" class="col-xs-3">
                            <strong>Finančný kód:</strong>
                            <p t-field="d.financny_kod"/>
                        </div>
                        <div t-if="d.datum_zaciatok" class="col-xs-3">
                            <strong>Dátum začiatku</strong>
                            <p t-field="d.datum_zaciatok"/>
                        </div>
                        <div t-if="d.datum_koniec" class="col-xs-3">
                            <strong>Dátum dokončenia:</strong>
                            <p t-field="d.datum_koniec"/>
                        </div>
                    </div>

                    <div class="row mt32 xs_32">
                        <div t-if="d.dodavatel_id.name" class="col-xs-3">
                            <strong>Dodávateľ:</strong>
                            <p t-field="d.dodavatel_id.name"/>
                        </div>
                        <div t-if="d.pc_id.name" class="col-xs-3">
                            <strong>PC:</strong>
                            <p t-field="d.pc_id.name"/>
                        </div>
                        <div t-if="d.pm_id.display_name" class="col-xs-3">
                            <strong>PM:</strong>
                            <p t-field="d.pm_id.display_name"/>
                        </div>
                        <div t-if="d.celkova_cena">
                            <table width="100%">
                                <tr>
                                    <td style="font-size:20px;text-align:right;">Celková cena:</td>
                                </tr>
                                <tr>
                                    <td style="font-size:20px;text-align:right;"><span t-esc="d.celkova_cena" t-esc-options='{"widget": "monetary", "display_currency": "d.currency_id"}'/></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!--<div class="hlavicka">

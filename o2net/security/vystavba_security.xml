<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <!--  Dodavatel, PC, PM, Manager -->
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_o2net">
            <field name="name">O2 Network</field>
            <field name="description">Builders price list</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_vystavba_supplier" model="res.groups">
            <field name="name">Vendor</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_o2net"/>
        </record>

        <record id="group_vystavba_pc" model="res.groups">
            <field name="name">Project coordinator (PC)</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_o2net"/>
        </record>

        <record id="group_vystavba_pm" model="res.groups">
            <field name="name">Project manager (PM)</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_o2net"/>
        </record>

        <record id="group_vystavba_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_o2net"/>
        </record>

        <record id="group_vystavba_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_o2net"/>
        </record>

        <!-- RECORD RULES -->

        <!-- Supplier -->
        <record model="ir.rule" id="rule_supplier_read">
            <field name="name">supplier can read purchase order where is supplier</field>
            <field name="model_id" ref="model_o2net_cenova_ponuka"/>
            <field name="groups" eval="[(4, ref('o2net.group_vystavba_supplier'))]"/>
            <field name="domain_force">[('dodavatel_id.id','=',user.partner_id.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record model="ir.rule" id="rule_supplier_write">
            <field name="name">supplier can write purchase order where is assigned</field>
            <field name="model_id" ref="model_o2net_cenova_ponuka"/>
            <field name="groups" eval="[(4, ref('o2net.group_vystavba_supplier'))]"/>
            <field name="domain_force">[('osoba_priradena_ids', 'in', [user.partner_id.id])]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>


        <!-- Project coordinator (PC) -->
        <record model="ir.rule" id="rule_pc_read">
            <field name="name">project coordinator can read purchase order where is PC</field>
            <field name="model_id" ref="model_o2net_cenova_ponuka"/>
            <field name="groups" eval="[(4, ref('o2net.group_vystavba_pc'))]"/>
            <field name="domain_force">[('pc_id.id','=',user.partner_id.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record model="ir.rule" id="rule_pc_write">
            <field name="name">project coordinator can write/unlink purchase order where is assigned</field>
            <field name="model_id" ref="model_o2net_cenova_ponuka"/>
            <field name="groups" eval="[(4, ref('o2net.group_vystavba_pc'))]"/>
            <field name="domain_force">[('osoba_priradena_ids', 'in', [user.partner_id.id])]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>


        <!-- Project manager (PM) -->
        <record model="ir.rule" id="rule_pm_read">
            <field name="name">project manager can read purchase order where is PM</field>
            <field name="model_id" ref="model_o2net_cenova_ponuka"/>
            <field name="groups" eval="[(4, ref('o2net.group_vystavba_pm'))]"/>
            <field name="domain_force">[('pm_id.id','=',user.partner_id.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record model="ir.rule" id="rule_pm_write">
            <field name="name">project manager can read purchase order where is assigned</field>
            <field name="model_id" ref="model_o2net_cenova_ponuka"/>
            <field name="groups" eval="[(4, ref('o2net.group_vystavba_pm'))]"/>
            <field name="domain_force">[('osoba_priradena_ids', 'in', [user.partner_id.id])]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>


        <!-- Manager -->
        <record model="ir.rule" id="rule_manager_read">
            <field name="name">manager can read purchase order where is Manager</field>
            <field name="model_id" ref="model_o2net_cenova_ponuka"/>
            <field name="groups" eval="[(4, ref('o2net.group_vystavba_manager'))]"/>
            <field name="domain_force">[('manager_id.id','=',user.partner_id.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record model="ir.rule" id="rule_manager_write">
            <field name="name">manager can read purchase order where is assigned</field>
            <field name="model_id" ref="model_o2net_cenova_ponuka"/>
            <field name="groups" eval="[(4, ref('o2net.group_vystavba_manager'))]"/>
            <field name="domain_force">[('osoba_priradena_ids', 'in', [user.partner_id.id])]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>

    </data>

</openerp>